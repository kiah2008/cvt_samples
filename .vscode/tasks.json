{
    "tasks": [
        {
            "type":"shell",
            "label": "run test",
            "command": "${input:run_cmd}",
            "args": [
                "${input:input_pic}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "detail": "run test",
        }
    ],
    "inputs": [
        {
          "id": "input_pic",
          "type": "pickString",
          "description": "input pic",
          "options": [
            "${workspaceFolder}/data/pic/lena.jpg"
          ],
          "default": "${workspaceFolder}/data/pic/lena.jpg"
        },
        {
            "id":"run_cmd",
            "type": "pickString",
            "description": "run cmd",
            "options": [
                "${file}",
                "${workspaceFolder}/build/bin/example_cv_read_image"
            ],
            "default": "${file}"
        }
    ],
    "version": "2.0.0"
}